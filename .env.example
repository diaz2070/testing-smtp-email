# SMTP Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-password

# IMAP Configuration (to save sent emails to Sent folder)
IMAP_HOST=imap.example.com
IMAP_PORT=993
IMAP_SECURE=true
IMAP_USER=your-email@example.com
IMAP_PASS=your-password
IMAP_SENT_FOLDER=Sent
SAVE_TO_SENT=true

# Email Details
EMAIL_FROM="Test Sender" <your-email@example.com>
EMAIL_TO=recipient@example.com
EMAIL_SUBJECT=Test Email from Nodemailer
EMAIL_TEXT=This is a plain text test email sent using nodemailer.
EMAIL_HTML=<h1>Test Email</h1><p>This is an <strong>HTML</strong> test email sent using nodemailer.</p>
